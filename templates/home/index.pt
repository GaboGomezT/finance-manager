<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">

        <div class="">
            <div tal:condition="not is_logged_in">

                
                <div class="p-10 w-full">
                    <form action="/login" method="POST" class="bg-white shadow-md rounded-lg px-12 pt-16 pb-12 mb-4">
                        <div class="mb-8">
                            <label class="block text-gray-700 text-5xl font-bold mb-2" for="email">
                                Correo
                            </label>
                            <input
                                class="shadow appearance-none border rounded-lg w-full py-6 px-6 text-5xl text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                id="email" name="email" type="text">
                        </div>
                        <div class="mb-8">
                            <label class="block text-gray-700 text-5xl font-bold mb-2" for="password">
                                Contraseña
                            </label>
                            <input
                                class="shadow appearance-none border rounded-lg w-full py-6 px-6 text-5xl text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                id="password" name="password" type="password">
                        </div>
                        <div class="flex items-center justify-center">
                            <button
                                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-5 px-10 text-5xl rounded-lg focus:outline-none focus:shadow-outline"
                                type="submit">
                                Entrar
                            </button>
                        </div>
                    </form>
                </div>



            </div>

            <div tal:condition="is_logged_in" class="container p-4 mt-20 w-2/3 flex justify-center">
                <form action="/spending" method="POST">
                    <label class="text-2xl font-semibold text-indigo-50" for="quantity">Cantidad</label><br>
                    <input class="w-max rounded-lg mb-4 mt-2 px-2 py-1" type="number" step="0.01" id="quantity"
                        name="quantity" required><br>
                    <label class="text-2xl font-semibold text-indigo-50" for="category-select">Categoría</label><br>
                    <select class="mt-2" name="category-select" id="category-select" required>
                        <option value="">Escoge una categoría</option>
                        <option value="Despensa">Despensa</option>
                        <option value="Restaurante">Restaurante</option>
                        <option value="Educación">Educación</option>
                        <option value="Trabajo">Trabajo</option>
                        <option value="Entretenimiento">Entretenimiento</option>
                        <option value="Salud">Salud</option>
                        <option value="Mascotas">Mascotas</option>
                        <option value="Servicios">Servicios</option>
                        <option value="No considerado">No considerado</option>
                    </select>
                    <br>
                    <br>
                    <label class="text-2xl font-semibold text-indigo-50" for="description">Otro</label><br>
                    <p class="text-indigo-50">Escribe una pequeña descripcón del gasto.</p>
                    <input class="w-max rounded-lg mb-4 px-2 mt-2" type="text" id="description" name="description"
                        required><br>
                    <input
                        class="bg-pink-800 hover:bg-pink-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="submit" value="Registrar">
                </form>

            </div>

        </div>

    </div>
</div>